@model MusicInShop.Web.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container">
        <div class="form-center">
                <!--Login Form Start-->
                    <div class="customer-login-register">
                        <div class="form-login-title">
                            <span><img src="~/Content/img/white.png" alt="" height="60"></span>
                            <h2>Вход</h2>
                            <h1></h1>
                        </div>
                        <div class="login-form">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-fild">
                                    <p><label>Email <span class="required">*</span></label></p>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "text" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <h2></h2>
                                <div class="form-fild">
                                    <p><label>Пароль <span class="required">*</span></label></p>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <h2></h2>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="login-submit">
                                    <div class="log-flex">
                                        <div class="check-b">
                                            <label>
                                                @Html.EditorFor(model => model.RememberMe, new { htmlAttributes = new { type = "checkbox", @class = "checkbox" } })
                                                @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                                            </label>
                                        </div>
                                        <div class="check-t">
                                            <span>Запомнить меня</span>
                                        </div>
                                    </div>

                                </div>
                                <div class="login-submit log-btn">
                                    <h4></h4>
                                    <button type="submit" class="btn btn-left">Войти</button>
                                </div>
                          
                            }
                        </div>
                    </div>

        </div>
    </div>
